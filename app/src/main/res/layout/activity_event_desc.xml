<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Event_Desc">


    <ImageView
        android:id="@+id/event_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/event_name"
        android:layout_below="@id/event_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="GDSC"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textStyle="bold"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_name"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/event_date"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_name"
                android:layout_centerInParent="true"

                android:layout_marginTop="30dp"

                android:background="@drawable/org_pink_grad_box"
                android:paddingLeft="30dip"
                android:paddingTop="15dip"
                android:gravity="center"
                android:paddingRight="26dip"
                android:paddingBottom="15dip"
                android:text="19 April 2020"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/event_time"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_date"
                android:layout_centerInParent="true"

                android:layout_marginTop="30dp"

                android:background="@drawable/org_pink_grad_box"
                android:gravity="center"
                android:paddingLeft="30dip"
                android:paddingTop="15dip"
                android:paddingRight="26dip"
                android:paddingBottom="15dip"
                android:text="10 - 11"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/event_description"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_time"
                android:layout_centerInParent="true"

                android:layout_marginTop="30dp"

                android:background="@drawable/pink_border_box"
                android:paddingLeft="30dip"
                android:paddingTop="15dip"
                android:paddingRight="26dip"
                android:paddingBottom="15dip"
                android:text="Description"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/event_venue"

                android:background="@drawable/pink_border_box"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_centerInParent="true"


                android:text="Venue"
                android:paddingLeft="30dip"
                android:paddingRight="26dip"
                android:paddingBottom="15dip"
                android:paddingTop="15dip"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/event_contact"
                android:layout_width="200dp"
                android:layout_height="60dp"

                android:layout_centerInParent="true"

                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/pink_border_box"
                android:drawablePadding="2dip"
                android:gravity="center"
                android:paddingLeft="40dip"
                android:paddingRight="26dip"
                android:singleLine="true"
                android:text="9930588266"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>





</RelativeLayout>